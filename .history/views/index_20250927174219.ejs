    >
      <!-- App Name -->
      <h1 class="text-6xl font-extrabold text-cyan-400 mb-4 tracking-wide">
        Narratica
      </h1>
      <!-- Tagline -->
      <p class="text-xl text-gray-200 mb-8">Where Stories Find Their Voice</p>

