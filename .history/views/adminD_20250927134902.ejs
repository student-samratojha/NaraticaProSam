<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body
    class="bg-gray-900 font-[Inter] text-white min-h-screen"
    style="
      background-image: url('https://images.unsplash.com/photo-1521791136064-7986c2920216?auto=format&fit=crop&w=1950&q=80');
      background-size: cover;
      background-attachment: fixed;
    "
  >
    <div
      class="bg-black/70 backdrop-blur-md p-8 m-8 rounded-3xl shadow-2xl max-w-4xl mx-auto"
    >
      <h1 class="text-4xl font-bold mb-4 text-cyan-400">Admin Dashboard</h1>

      <div class="mb-6 border-b border-gray-700 pb-4">
        <h2 class="text-2xl font-semibold mb-2 text-yellow-400">
          Logged In User
        </h2>
        <p><span class="font-semibold">Name:</span> <%= user.name %></p>
        <p><span class="font-semibold">Email:</span> <%= user.email %></p>
        <p>
          <span class="font-semibold">Occupation:</span> <%= user.occupation %>
        </p>
        <p>
          <span class="font-semibold">Specification:</span> <%=
          user.specification %>
        </p>
        <p>
          <span class="font-semibold">Description:</span> <%= user.description
          %>
        </p>
        <img
          src="<%= user.photo %>"
          alt=""
          class="w-32 h-32 rounded-full mt-2 mb-2 border-2 border-cyan-400"
        />
        <a
          href="/logout"
          class="inline-block mt-2 px-4 py-2 bg-red-600 hover:bg-red-700 rounded-md font-semibold"
          >Logout</a
        >
      </div>

      <div>
        <h2 class="text-2xl font-semibold mb-4 text-green-400">All Users</h2>
        <% users.forEach((u) => { %>
        <div class="mb-4 p-4 bg-gray-800/70 rounded-xl shadow-md">
          <div class="flex gap-10">
            
            <div class="flex items-center justify-center flex-col">
              <img
                src="<%= u.photo %>"
                alt=""
                class="w-24 h-24 rounded-full mb-2 border-2 border-cyan-300"
              />
             
            </div>
            <div class="text-sm">
              <p><span class="font-semibold">Name:</span> <%= u.name %></p>
              <p><span class="font-semibold">Email:</span> <%= u.email %></p>
              <p><span class="font-semibold">Role:</span> <%= u.role %></p>
              <p>
                <span class="font-semibold">Occupation:</span> <%= u.occupation
                %>
              </p>
              <p>
                <span class="font-semibold">Specification:</span> <%=
                u.specification %>
              </p>
            </div>

          </div>
          <p class="text-sm">
            <span class="font-semibold ">Description:</span> <%= u.description %>
          </p>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
