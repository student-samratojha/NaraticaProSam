<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body
    class="bg-gray-900 flex overflow-hideen items-center justify-center font-[Inter] text-white min-h-screen"
    style="
      background-image: url('https://images.unsplash.com/photo-1521791136064-7986c2920216?auto=format&fit=crop&w=1950&q=80');
      background-size: cover;
      background-attachment: fixed;
    "
  >
    <div
      class="bg-black/70 backdrop-blur-md px-8 py-5 rounded-3xl shadow-2xl max-w-4xl mx-auto"
    >
      <h1 class="text-4xl font-bold mb-4 text-cyan-400">Admin Dashboard</h1>

      <div
        class="mb-6 border-4 border-cyan-400 rounded-3xl p-6 bg-gradient-to-r from-gray-800/80 to-black/80 shadow-2xl text-center transform transition duration-500"
      >
        <h2 class="text-3xl font-semibold text-yellow-400 mb-1">
          Welcome, <%= user.name %>!
        </h2>

        <span class="text-lg text-cyan-300 italic"><%= user.email %></span>
        <p class="text-sm text-gray-200 mb-4">
          Working as
          <span class="font-semibold text-cyan-300"><%= user.occupation %></span
          >, specialized in
          <span class="font-semibold text-cyan-300"
            ><%= user.specification %></span
          >. <%= user.description %>
        </p>

        <img
          src="<%= user.photo %>"
          alt=""
          class="w-[120px] h-[120px] rounded-full mx-auto mb-4 border-4 border-pink-400 shadow-lg animate-pulse"
        />

        <a
          href="/logout"
          class="inline-block text-sm px-6 py-2 bg-red-600 hover:bg-red-700 rounded-2xl font-semibold text-white shadow-lg transform hover:scale-101 transition duration-300"
        >
          Logout
        </a>
      </div>

      <div>
        <h2 class="text-2xl font-semibold mb-4 text-green-400">All Users</h2>
        <% users.forEach((u) => { %>
        <div class="mb-4 p-4 bg-gray-800/70 rounded-xl shadow-md">
          <div class="flex gap-10">
            <div class="flex items-center justify-center flex-col">
              <img
                src="<%= u.photo %>"
                alt=""
                class="w-24 h-24 rounded-full mb-2 border-2 border-cyan-300"
              />
              <% if(u.role === "admin") { %>
              <p class="text-gray-400 text-sm font-semibold">Not deletable</p>
              <% } else { %>
              <a
                href="/admin/delete/user/<%= u._id %>"
                class="text-red-500 text-sm hover:underline font-semibold"
                >Delete User</a
              >
              <% } %>
            </div>
            <div class="text-sm">
              <p><span class="font-semibold">Name:</span> <%= u.name %></p>
              <p><span class="font-semibold">Email:</span> <%= u.email %></p>
              <p><span class="font-semibold">Role:</span> <%= u.role %></p>
              <p>
                <span class="font-semibold">Occupation:</span> <%= u.occupation
                %>
              </p>
              <p>
                <span class="font-semibold">Specification:</span> <%=
                u.specification %>
              </p>
            </div>
          </div>
          <p class="text-sm">
            <span class="font-semibold">Description:</span> <%= u.description %>
          </p>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
